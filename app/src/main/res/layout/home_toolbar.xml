<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    android:layout_height="150dp"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
    android:background="@color/ColorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/toolbar_button_add"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_add"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/toolbar_button_email"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_email"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/toolbar_button_add" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/toolbar_label_date"
            android:id="@+id/toolbar_Date"
            android:textSize="25dp"
            android:gravity="top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/toolbar_label_time"
            android:id="@+id/toolbar_Time"
            android:textStyle="bold"
            android:textSize="50dp"
            android:gravity="top"
            android:layout_below="@+id/toolbar_dayName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_label_dayName"
            android:id="@+id/toolbar_dayName"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/toolbar_weather"
            android:gravity="center_vertical|right"
            android:layout_above="@+id/toolbar_button_add"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/toolbar_weather_icon"
            android:textStyle="bold"
            android:textSize="80dp"
            android:gravity="center|center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/toolbar_weather" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
