<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    android:layout_height="150dp"
    android:layout_width="match_parent"
    android:elevation="2dp"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
    android:background="@color/ColorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <ImageButton
            android:id="@+id/toolbar_button_add"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_add"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/toolbar_button_email"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_email"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/toolbar_button_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/toolbar_Date"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_below="@+id/toolbar_dayName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:id="@+id/toolbar_Time"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_below="@+id/toolbar_Date"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day of week"
            android:id="@+id/toolbar_dayName"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="toolbar_weather"
            android:id="@+id/toolbar_weather"
            android:layout_below="@+id/toolbar_Time"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
